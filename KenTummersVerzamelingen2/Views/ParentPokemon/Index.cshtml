@model KenTummersVerzamelingen2.ViewModels.ViewModel
@using Microsoft.AspNet.Identity

@{
    ViewBag.Title = "Index";
}

<h2>Regio Pokémon</h2>

<p>
    @{
        if (User.Identity.GetUserName() == "ken.tummers@hotmail.nl" || User.Identity.GetUserName() == "Admin@admin.com")
        {
            @Html.ActionLink("Nieuwe regio Pokémon", "Create")
        }
    }
</p>

<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Categorie
        </th>
        <th>
            Status
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.parentPokemon)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categorie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.ActionLink("Select", "Index", new { id = item.ID }) |
                @{
                    if (User.Identity.GetUserName() == "ken.tummers@hotmail.nl" || User.Identity.GetUserName() == "Admin@admin.com")
                    {
                        @Html.ActionLink("Edit", "Edit", new { id = item.ID })
                        <text>|</text>
                    }
                }
                @{
                    if (User.Identity.GetUserName() == "Admin@admin.com")
                    {
                        if (item.Status == "Te akkorderen")
                        {
                            @Html.ActionLink("Akkorderen", "Akkorderen", new { id = item.ID })
                            <text>|</text>
                        }
                    }
                }
                @Html.ActionLink("Details", "Details", new { id = item.ID })
                @{
                    if (User.Identity.GetUserName() == "ken.tummers@hotmail.nl" || User.Identity.GetUserName() == "Admin@admin.com")
                    {
                        <text>|</text>
                        @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                    }
                }
            </td>
        </tr>
    }

</table>

@if (Model.childPokemons == null)
{
    <h3>Pokémon</h3>

    <p>
        @{
            if (User.Identity.GetUserName() == "ken.tummers@hotmail.nl" || User.Identity.GetUserName() == "Admin@admin.com")
            {
                @Html.ActionLink("Nieuwe Pokémon", "../ChildPokemon/Create", "ChildPokemon")
            }
        }
    </p>
    <p>
        Selecteer een regio in de bovenstaande tabel.
    </p>
}

@if (Model.childPokemons != null)
{
    <h3>Pokémon</h3>

    <p>
        @{
            if (User.Identity.GetUserName() == "ken.tummers@hotmail.nl" || User.Identity.GetUserName() == "Admin@admin.com")
            {
                @Html.ActionLink("Nieuwe Pokémon", "../ChildPokemon/Create", "ChildPokemon")
            }
        }
    </p>


    <table class="table">
        <tr>
            <th>
                Name
            </th>
            <th>
                Categorie
            </th>
            <th>
                Waarde
            </th>
            <th>
                Prijs
            </th>
            <th>
                Type
            </th>
            <th>
                Number
            </th>
            <th>
                Status
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.childPokemons)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Categorie)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Waarde)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Prijs)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @{
                        if (User.Identity.GetUserName() == "ken.tummers@hotmail.nl" || User.Identity.GetUserName() == "Admin@admin.com")
                        {
                            @Html.ActionLink("Edit", "../ChildPokemon/Edit", new { id = item.ID })
                            <text>|</text>
                        }
                    }
                    @{
                        if (User.Identity.GetUserName() == "Admin@admin.com")
                        {
                            if (item.Status == "Te akkorderen")
                            {
                                @Html.ActionLink("Akkorderen", "../ChildPokemon/Akkorderen", new { id = item.ID })
                                <text>|</text>
                            }
                        }
                    }
                    @Html.ActionLink("Details", "Details", "ChildPokemon", new { id = item.ID }, null)
                    @{
                        if (User.Identity.GetUserName() == "ken.tummers@hotmail.nl" || User.Identity.GetUserName() == "Admin@admin.com")
                        {
                            <text>|</text>
                            @Html.ActionLink("Delete", "../ChildPokemon/Delete", new { id = item.ID })
                        }
                    }

                </td>
            </tr>
        }

    </table>
}
