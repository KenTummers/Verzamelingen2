@model KenTummersVerzamelingen2.Models.ParentPokemon
@using Microsoft.AspNet.Identity

@{
    ViewBag.Title = "Edit";
}




@using (Html.BeginForm())
{
    if (User.Identity.GetUserName() == "Admin@admin.com")
    {
        <h2>Edit</h2>
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>ParentPokemon</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ID)

            <div class="form-group">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Categorie, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Categorie, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.Status, new List<SelectListItem>
                        {
                            new SelectListItem() {Text = "Correct", Value="Correct"},
                            new SelectListItem() {Text = "Incorrect", Value="Incorrect"}
                        }, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
    else
    {
        <br />
        <div>Nice try, buddy.</div>
    }

}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
